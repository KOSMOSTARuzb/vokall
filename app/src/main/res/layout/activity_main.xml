<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:keepScreenOn="true">

    <!-- Header: My Name -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/name_card"
        style="?attr/materialCardViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: "
                android:textAppearance="?attr/textAppearanceLabelMedium" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                android:text="(unknown)"/>
<!--                android:textColor="?attr/colorPrimary"-->
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/status_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="32dp"
        app:cardBackgroundColor="@color/state_unknown"
        app:cardCornerRadius="32dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_card"
        app:layout_constraintBottom_toTopOf="@+id/control_bar"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/status_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/wifi_find_24px"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/current_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_unknown"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/previous_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@android:color/white"
                    tools:text="Previously: Searching" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="onStatusClick"
                android:clickable="true"
                android:focusable="true" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Control Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/control_bar"
        style="?attr/materialCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@id/debug_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_mute"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Mute"
                app:icon="@drawable/mic_24px" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_audio_device"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Speaker"
                app:icon="@drawable/volume_up_24px" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Debug Logs Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/debug_card"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/debug_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1A000000"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textSize="12sp" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>